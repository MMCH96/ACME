@model Inventario_ACME.Models.Sucursal_B

@{
    ViewData["Title"] = "Venta de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Registrar venta de producto en la Sucursal B</h3>
        </div>

    </div>

    <div class="row col-sm-12">
        <div class="col-sm-10">
            <form asp-action="Venta" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="product_id" class="control-label"></label>
                    <input asp-for="product_id" class="form-control" readonly/>
                    <span asp-validation-for="product_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cantidad" class="control-label"></label>
                    <input asp-for="cantidad" class="form-control" readonly/>
                    <span asp-validation-for="cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Cantidad de Productos Vendidos</label>
                    <input name="venta" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar Venta" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

