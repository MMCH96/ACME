@model IEnumerable<Inventario_ACME.Models.Sucursal_A>
@{
    ViewData["Title"] = "Inventario Sucursal A";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Inventario Sucursal A</h3>
        </div>

        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="SucursalA"> Agregar Producto</a>
        </div>
    </div>

    <div class="row ">

        <div class="col-sm-12">

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="text-align:center;">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(productoA => productoA.id)</td>
                            <td>@Html.DisplayNameFor(productoA => productoA.product_id)</td>
                            <td>@Html.DisplayNameFor(productoA => productoA.cantidad)</td>
                            <td>Registrar</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.product_id</td>
                            <td>@item.cantidad</td>
                            <td>
                                <a asp-controller="SucursalA" asp-action="Venta" asp-route-id="@item.id" class="btn btn-success"> Venta</a>
                                <a asp-controller="SucursalA" asp-action="Compra" asp-route-id="@item.id" class="btn btn-primary">Compra</a>
                            </td>
                            <td>
                                <a asp-controller="SucursalA" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                                <a asp-controller="Productos" asp-action="InfoA" asp-route-id="@item.product_id" class="btn btn-warning">Ver Información</a>
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>


            }
            else
            {

                <h5>Aun no hay productos registrados</h5>
            }
        </div>


    </div>
    <div class="row col-sm-6">
        <h3>Información del Producto Seleccionado</h3>
        <table class="table table-bordered table-striped" style="text-align:center;">
            <thead>
                <tr>
                    <td>Id del producto</td>
                    <td>Nombre</td>
                    <td>Codigo de Barras</td>
                    <td>Precio</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@TempData["Id"]</td>
                    <td>@TempData["Nombre"]</td>
                    <td>@TempData["CodigoBarras"]</td>
                    <td>$ @TempData["Precio"]</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

